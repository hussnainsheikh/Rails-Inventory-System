<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Register an Account</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :designation, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.select( :designation, ['', 'RSO', 'ASM', 'Area Manager'], {}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :gender, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.radio_button :gender, "male", checked: true %>Male
          <%= f.radio_button :gender, "female" %>Female
        </div>
      </div>

      <div class="form-group">
        <%= f.label :date_of_birth, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.date_select :date_of_birth, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :confirm_password, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-5">
          <%= f.submit "Register", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
