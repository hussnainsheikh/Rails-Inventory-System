<div class="form-horizontal">
  <%= form_for(@item) do |f| %>
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h3>
        <ul>
          <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.text_area :description, class: "form-control", :rows =>10 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Serial #', class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :product_model_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :vendor_name, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :vendor_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :value, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.number_field :value, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :quantity, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :quantity, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :category, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.select :category_id, Category.all.collect {|p| [ p.name, p.id ] }, { :include_blank => "Please select" }, {class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Customer, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.select :customer_id, Customer.all.collect {|p| [ p.name, p.id ] }, { :include_blank => "Please select" }, {class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :status, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.select :status, options_for_select([['New','New'],['Sold','Sold'],['Expire','Expire']]), { :include_blank => "Please select" }, {class: "form-control"} %>
      </div>
    </div>
</div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-5">
      <%= f.submit "Create Item", class: "btn btn-primary" %>
      <%= link_to 'Cancel', items_path, :class => "btn btn-danger" %>
    </div>
  </div>
<% end %>
