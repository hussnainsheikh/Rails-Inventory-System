<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @item.name %></h3>
  </div>
  <div class="panel-body">
    <div class="container">
      <div class="row">
        <div class="col-md-2"><b>Category</b></div>
        <div class="col-md-8"><%= simple_format(@item.category.name) %></div>
      </div>

      <div class="row">
        <div class="col-md-2"><b>Description</b></div>
        <div class="col-md-8"><%= simple_format(@item.description) %></div>
      </div>

      <div class="row">
        <div class="col-md-2"><b>Product Model Number</b></div>
        <div class="col-md-4"><%= @item.product_model_number %></div>
      </div>

      <div class="row">
        <div class="col-md-2"><b>Vendor</b></div>
        <div class="col-md-4"><%= @item.vendor_name %></div>
      </div>

      <div class="row">
        <div class="col-md-2"><b>Quantity</b></div>
        <div class="col-md-4"><%= @item.quantity %></div>
      </div>

      <div class="row">
        <div class="col-md-2"><b>Status</b></div>
        <div class="col-md-4"><%= @item.status %></div>
      </div>

      <% if current_user.has_role? :admin %>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
          <%= link_to 'Edit', edit_item_path(@item), :class => "btn btn-primary" %>
          <%= link_to 'Delete', @item, confirm: 'Are you sure?', method: :delete, :class => "btn btn-warning" %>
          <%= link_to 'Cancel', items_path, :class => "btn btn-danger" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>