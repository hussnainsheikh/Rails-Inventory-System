<div class="form-horizontal">
  <%= form_for(@expense) do |f| %>
    <% if @expense.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

        <ul>
          <% @expense.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :category, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.select :category, options_for_select([['Salary', 'Salary'], ['Utility', 'Utility'],['Maintenance', 'Maintenance']]), { :include_blank => "Please select" }, {class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :amount, class: "col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%= f.number_field :amount, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-5">
      <%= f.submit "Create", class: "btn btn-primary" %>
      <%= link_to 'Cancel', expenses_path, :class => "btn btn-danger" %>
    </div>
  </div>
<% end %>