<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @expense.name %></h3>
  </div>
  <div class="panel-body">
    <div class="container">
      <div class="row">
        <div class="col-md-2"><b>Category</b></div>
        <div class="col-md-8"><%= simple_format(@expense.category) %></div>
      </div>
      <div class="row">
        <div class="col-md-2"><b>Amount</b></div>
        <div class="col-md-4"><%= @expense.amount %></div>
      </div>
      <% if current_user.has_role? :admin %>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
          <%= link_to 'Edit', edit_expense_path(@expense), :class => "btn btn-primary" %>
          <%= link_to 'Delete', @expense, data: {confirm: 'Are you sure?'}, method: :delete, :class => "btn btn-warning" %>
          <%= link_to 'Cancel', expenses_path, :class => "btn btn-danger" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>