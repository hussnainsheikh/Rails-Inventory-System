<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Categories</h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <table class="table sortable">
        <thead>
          <th>Name</th>
          <% if current_user.has_role? :admin %>
          <th class="sorttable_nosort"><center>Edit/Delete</center></th>
          <% end %>
        </thead>
        <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category.name, category %></td>
          <% if current_user.has_role? :admin %>
          <td><center><%= link_to '', edit_category_path(category), :class=>"fa fa-edit" %> |  <%= link_to content_tag(:i,nil, :class=>"fa fa-trash-o"), category, data: {confirm: 'Are you sure you want to delete this category?'}, method: :delete %></center>
          </td>
          <% end %>
        </tr>
        <% end -%>
      </table>
    </div>
  </div>
</div>
