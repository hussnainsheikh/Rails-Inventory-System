<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Customers</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <table class="table sortable">
        <thead>
          <th>Name</th>
          <th>Cnic</th>
          <th>Address</th>
          <th>Phone</th>
          <th class="sorttable_nosort"><center>Edit/Delete</center></th>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.name %></td>
              <td><%= customer.cnic %></td>
              <td><%= customer.address %></td>
              <td><%= customer.phone %></td>
              <td><center><%= link_to '', edit_customer_path(customer), :class=>"fa fa-edit" %> |  <%= link_to content_tag(:i,nil, :class=>"fa fa-trash-o"), customer, data: {confirm: 'Are you sure you want to delete this entity?'}, method: :delete %></center>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row"><li style="list-style: none;"><%= link_to 'New Customer', new_customer_path,  :class=> "navbar-link" %></li></div>